{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "nx",
      "runtimeArgs": [
        "affected:test",
        "--skip-nx-cache",
        "--runInBand",
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/*"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
    // repeat for each debuggable app
  ]
}